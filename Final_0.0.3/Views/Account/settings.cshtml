@model IEnumerable<Final_0._0._3.Models.FileModel>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='utf8'>
    <title>Printbox Account settings</title>
    <!--[if lt IE 9]>
    <script src="https://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    <link href="~/css/StyleSheet1.css" media="screen" rel="stylesheet" type="text/css" />
    <script src="~/js/JavaScript.js" type="text/javascript"></script>
    <link href='/favicon.png' rel='shortcut icon'>
    <meta content="authenticity_token" name="csrf-param" />
    <meta content="7g3C3VijMGaov/e3Y6qcRlQ+EvzfyEmSw2QiVoirXks=" name="csrf-token" />
</head>
<body class=''>
    <script src="~/js/JavaScript1.js" type="text/javascript"></script>
    <div id='container'>
        <div id='navbar'>
            <div class='container'>
                <div class='navbar-header' style="background-color:powderblue;">
                    <button class='navbar-toggle' data-target='#bs-example-navbar-collapse-1' data-toggle='collapse' type='button'>
                        <span class='sr-only'>Menu</span>
                        <span class='icon-bar'></span>
                        <span class='icon-bar'></span>
                        <span class='icon-bar'></span>
                    </button>
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/assets/images/icons8-print-96-96x96.png" alt="CopyBox" style="height: 3rem;">
                    </a>
                </div>
                <div class='collapse navbar-collapse' id='bs-example-navbar-collapse-1'>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <ul class='session'>
                            <li class='active'>
                                <a href="/myaccount/account">
                                    <i class='icon-user icon-white'></i>
                                    Hello @User.Identity.Name!
                                </a>
                            </li>
                            <li>

                                <a asp-controller="Account" asp-action="Logout" method="post">Log out</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class='container-inner'>
            <aside id='sidebar'>
                <p id='available_credits'>
                    <span>
                        <span class='credits_amount'>0</span>
                        credits
                    </span>
                </p>
                <nav>
                    <ol>
                        <li>
                            <a asp-area="" asp-controller="Account" asp-action="import">Добавить документ</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Account" asp-action="account">Список документов</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Account" asp-action="history">История</a>
                        </li>

                        @*<li class='active'>
                            <a asp-area="" asp-controller="Account" asp-action="settings">Настройки</a>
                        </li>*@
                    </ol>
                </nav>
            </aside>
            <div id='content'>


                <h1>Account settings</h1>
                <div id='account_settings'>
                    <form accept-charset="UTF-8" action="/myaccount/account/mailing_subscribe_toggle" class="simple_form new_user" id="new_user" method="post" novalidate="novalidate">
                        <div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /><input name="authenticity_token" type="hidden" value="7g3C3VijMGaov/e3Y6qcRlQ+EvzfyEmSw2QiVoirXks=" /></div><h2>E-news</h2>

                        <div class="form-group string required user_mailing_unsubscribe">
                            <div class="controls">
                                <label for="mailing_unsubscribe">By clicking on “Unsubsrcibe” button you will deactivate subscribtion to Printbox newsletter.</label>
                            </div>
                        </div><input name="commit" type="submit" value="Unsubscribe" />
                    </form>

                    <form accept-charset="UTF-8" action="/myaccount/account/change_password" class="simple_form edit_user" id="edit_user" method="post" novalidate="novalidate">
                        <div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /><input name="_method" type="hidden" value="put" /><input name="authenticity_token" type="hidden" value="7g3C3VijMGaov/e3Y6qcRlQ+EvzfyEmSw2QiVoirXks=" /></div><h2>Change password</h2>

                        <div class="form-group password required user_old_password"><label class="password required control-label" for="user_old_password"><abbr title="required">*</abbr> Old password</label><div class="controls"><input class="password required" id="user_old_password" name="user[old_password]" size="50" type="password" /></div></div>
                        <div class="form-group password required user_password"><label class="password required control-label" for="user_password"><abbr title="required">*</abbr> Password</label><div class="controls"><input class="password required" id="user_password" name="user[password]" size="50" type="password" /></div></div>
                        <input name="commit" type="submit" value="Change password" />
                    </form>

                    <form accept-charset="UTF-8" action="/myaccount/account/reset_pin" method="post">
                        <div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /><input name="_method" type="hidden" value="put" /><input name="authenticity_token" type="hidden" value="7g3C3VijMGaov/e3Y6qcRlQ+EvzfyEmSw2QiVoirXks=" /></div>
                        <h2>Reset PIN</h2>
                        <p>
                            Your current PIN is:
                            <span class='pin'>4UYKU3P</span>
                        </p>
                        <p>
                            You can use it to quickly log in at a Printbox kiosk and to add documents to your account via email.
                        </p>
                        <div class='control-group password required'>
                            <div class='input-append'>
                                <label for="Old_password">Old password</label>
                                <input id="user_old_password_" name="user[old_password][]" size="50" type="password" />
                                <button name="button" type="submit">Reset PIN</button>
                            </div>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
    <footer>
        <div class='container'>
            <ul>
                <li class='disabled'>
                    <a href='#'>
                        Printbox © 2021
                    </a>
                </li>
            </ul>
            <ul>
            </ul>
        </div>
    </footer>

</body>
</html>
